<div class="row" style="margin: 6rem 0 4rem 0;">
    <div class="col-8 m8">
        <div class="card" style="margin-bottom: 10px; opacity:92%">
            <div class="card-body">
                <div class="card-title">
                    <h3 style="font-family:'Ubuntu'; font-weight:bold; color:rgb(78, 78, 78);">{{article.title}}
                        <small>{{{editIcon article.user user article._id false}}}</small>
                    </h3>
                </div>
            </div>
        </div>
        <div class="card story" style="opacity:92%">
            <div class="card-body">
                <span class="card-title" style="font-style: italic;">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{article.body}}}
            </div>
        </div>
    </div>
    <div class="col-4 m4">
        <div class="card text-center" style="width: 70%; border-radius:10px; opacity:95%">
            <div class="card-body" style="padding:10px 0px 0px 0px;">
                <img src="{{article.user.image}}" style="width: 70%; border-radius:50px;">
                <h5 class="card-title" style="margin-top: 20px;">{{article.user.displayName}}</h5>
            </div>
            <div class="card-action" style="margin: 0px 0px 10px 0px;">
                <a href="/articles/user/{{article.user._id}}" class="btn btn-success ">More From {{article.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<div class="commentsDiv">
     <form action="/articles/{{article._id}}/comments" method="POST" style="border-radius: 2px; padding: 20px; background-color: #EEEEEE; opacity:96%; border-radius:14px;"> 
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group" style="margin-bottom: 20px;">
            <label for="description"><h5>Leave a comment</h5></label>
            <textarea rows="2" class="form-control form-control-lg" name="comment" id="comment"></textarea>
        </div>
        <div class="form-group commentButton">
            <input type="submit" value="Post" class="btn btn-primary commentButton">
        </div> 
    </form>
</div>
<div class="container commentsDiv">
    {{#each article.comments}}
        <div class="row">
            <h3>{{text}}</h3><h3>{{postedBy.displayName}}</h3>
        </div>
    {{else}}
    <p>No comments</p>
    {{/each}}
</div>

